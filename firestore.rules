rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN'; }
    function isOwner(userId) { return request.auth.uid == userId; }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
      
      // Wishlist sub-collection
      match /wishlist/{productId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Sellers collection
    match /sellers/{sellerId} {
      allow read: if isSignedIn();
      allow write: if isOwner(sellerId) || isAdmin();
    }

    // Products collection
    match /products/{productId} {
      allow read: if true; // Discovery is public
      allow create: if isSignedIn(); // Any signed in user can submit (but requires admin approval)
      allow update: if isAdmin() || (isSignedIn() && resource.data.sellerId == request.auth.uid);
      allow delete: if isAdmin() || (isSignedIn() && resource.data.sellerId == request.auth.uid);
    }

    // Enquiries collection
    match /enquiries/{enquiryId} {
      allow create: if isSignedIn();
      allow read: if isAdmin() || 
                    (isSignedIn() && request.auth.uid == resource.data.sellerId) || 
                    (isSignedIn() && request.auth.uid == resource.data.customerId);
    }

    // Product news
    match /product_news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
